<div class="container-fluid">
  <div class="row">
    <!-------------------- --Conteúdo principal ------------------------->
    <!-- Conteúdo principal -->
      <div class="col-lg-9">
        <h1 class="mt-4">Gerenciamento de Usuários</h1>
        <div class="right_col" role="main">
          <!-- ... (conteúdo do gráfico e da tabela) ... -->
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-md-8">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th> </th>
                        <th>Editar</th>
                        <th>Excluir</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @users.each do |user| %>
                        <tr>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td>
                              <% if user.role == 'admin' %>
                                  <button type="button" class="btn btn-success">Administrador</button>
                              <% else %>
                                  <button type="button" class="btn btn-primary">Usuário</button>
                              <% end %>
                          </td>
                          <td> 
                              <%= button_to edit_user_registration_path(user), method: :get, class: 'btn btn-warning' do %>
                              <i class="fa fa-edit"></i>
                              <% end %>
                          </td>
                        
                          <td> 
                              <%= button_to seller_path(seller), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este usuário?' }, class: 'btn btn-danger' do %>
                              <i class="fa fa-trash"></i>
                              <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
           </div>

          <!-- ... (Fnal conteúdo do gráfico e da tabela) ... -->  
    <!-- /Conteúdo principal -->
    <!--------------------- /Conteúdo principal ------------------------->
  </div>
</div>

