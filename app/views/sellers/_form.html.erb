<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: seller, class: "form") do |form| %>
        <% if seller.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(seller.errors.count, "error") %> prohibited this seller from being saved:</h2>
            <ul>
              <% seller.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :status %>
          <%= form.select :status, [['Ativo', 'Ativo'], ['Inativo', 'Inativo']], { include_blank: true }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :cargo %>
          <%= form.text_field :cargo, class: "form-control" %>
        </div>

        <div class="d-flex justify-content-between">
          <div class="form-group">
            <%= form.submit "Salvar Vendedor", class: "btn btn-primary" %>
          </div>
          <div class="form-group">
            <%= link_to "Voltar", sellers_path, class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
